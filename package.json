{
  "name": "snippetsmanager",
  "displayName": "Snippets Manager",
  "description": "Create and edit snippets easily.",
  "keywords": [
    "snippet editor",
    "edit snippet",
    "create snippet",
    "snippet manager",
    "snippets"
  ],
  "version": "0.0.4",
  "publisher": "zjffun",
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zjffun/vscode-snippets-manager.git"
  },
  "bugs": {
    "url": "https://github.com/zjffun/vscode-snippets-manager/issues"
  },
  "homepage": "https://github.com/zjffun/vscode-snippets-manager#readme",
  "activationEvents": [
    "onStartupFinished",
    "onView:snippetsmanager-snippetsView-Explorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "snippetsmanager-snippetsView",
          "title": "Snippets",
          "icon": "$(symbol-snippet)"
        }
      ]
    },
    "views": {
      "snippetsmanager-snippetsView": [
        {
          "id": "snippetsmanager-snippetsView-Explorer",
          "name": "Explorer"
        },
        {
          "id": "snippetsmanager-snippetsView-HelpAndFeedback",
          "name": "Help And Feedback"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "snippetsmanager.refresh",
          "when": "view == snippetsmanager-snippetsView-Explorer",
          "group": "navigation@10"
        }
      ],
      "view/item/context": [
        {
          "command": "_snippetsmanager.deleteSnippet",
          "when": "view == snippetsmanager-snippetsView-Explorer && viewItem == snippetsmanager-snippetsView-Explorer-Item",
          "group": "inline@2"
        },
        {
          "command": "_snippetsmanager.editSnippet",
          "when": "view == snippetsmanager-snippetsView-Explorer && viewItem == snippetsmanager-snippetsView-Explorer-Item",
          "group": "inline@1"
        }
      ],
      "commandPalette": [
        {
          "command": "snippetsmanager.createSnippet",
          "when": "editorHasSelection"
        },
        {
          "command": "_snippetsmanager.deleteSnippet",
          "when": "false"
        },
        {
          "command": "_snippetsmanager.editSnippet",
          "when": "false"
        },
        {
          "command": "_snippetsmanager.showSnippet",
          "when": "false"
        }
      ],
      "editor/context": [
        {
          "command": "snippetsmanager.createSnippet",
          "when": "editorHasSelection",
          "group": "snippets"
        }
      ]
    },
    "commands": [
      {
        "command": "snippetsmanager.createSnippet",
        "title": "Create Snippet",
        "category": "Snippets Manager"
      },
      {
        "command": "_snippetsmanager.deleteSnippet",
        "title": "Delete Snippet",
        "icon": "$(close)"
      },
      {
        "command": "_snippetsmanager.editSnippet",
        "title": "Edit Snippet",
        "icon": "$(edit)"
      },
      {
        "command": "_snippetsmanager.showSnippet",
        "title": "Show Snippet"
      },
      {
        "command": "snippetsmanager.refresh",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "Snippets Manager"
      }
    ],
    "customEditors": [
      {
        "viewType": "snippetsmanager.codeSnippetsEditorView",
        "displayName": "Code Snippets",
        "selector": [
          {
            "filenamePattern": "*.code-snippets"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "cd packages/code-snippets-editor && npm pack && cd - && yarn add ./packages/code-snippets-editor/code-snippets-editor-0.0.1.tgz && yarn run compile",
    "compile": "tsc -p ./",
    "watch": "cd packages/code-snippets-editor && (yarn run watch &) && cd - && yarn add ./packages/code-snippets-editor && tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "_vscode:pack": "vsce package",
    "_vscode:install": "ls snippetsmanager-*.vsix | xargs code --install-extension"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/react": "^17.0.19",
    "@types/vscode": "^1.59.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.21",
    "code-snippets-editor": "./packages/code-snippets-editor/code-snippets-editor-0.0.1.tgz",
    "vscode-ext-codicons": "^1.4.0",
    "vscode-ext-help-and-feedback-view": "^1.0.1"
  },
  "icon": "images/icon.png"
}
